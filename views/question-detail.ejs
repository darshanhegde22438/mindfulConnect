<%- include('partials/header-logged-in') %>

<!-- Hero Section -->
<section class="hero">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-10 text-center">
        <h1 class="display-3">Question <span class="text-gradient">Details</span></h1>
        <p class="subtitle mb-4">View and participate in the discussion</p>
      </div>
    </div>
  </div>
</section>

<!-- Question and Answers Section -->
<section class="features py-6">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <!-- Question Card -->
        <div class="community-card mb-4">
          <div class="card-body">
            <h3><%= post.title %></h3>
            <div class="d-flex align-items-center mb-3">
              <small class="text-muted">Posted by <%= post.author.name %> • <%= new Date(post.createdAt).toLocaleDateString() %></small>
            </div>
            <p class="mb-3"><%= post.content %></p>
            <div class="d-flex gap-2 mb-3">
              <% post.tags.forEach(tag => { %>
                <span class="badge bg-primary"><%= tag %></span>
              <% }); %>
            </div>
          </div>
        </div>

        <!-- Answers Section -->
        <div class="community-card">
          <div class="card-body">
            <h3>Answers (<%= answerCount %>)</h3>
            
            <% if (post.answers && post.answers.length > 0) { %>
              <% post.answers.forEach(answer => { %>
                <div class="answer-item <%= answer.isSolution ? 'border-success' : '' %>">
                  <% if (answer.isSolution) { %>
                    <div class="badge bg-success mb-2">Accepted Solution</div>
                  <% } %>
                  <div class="d-flex align-items-center mb-3">
                    <small class="text-muted">Answered by <%= answer.author.name %> • <%= new Date(answer.createdAt).toLocaleDateString() %></small>
                  </div>
                  <p class="mb-3"><%= answer.content %></p>
                  
                  <% if (!answer.isSolution && post.author._id.toString() === user._id.toString()) { %>
                    <form action="/community/answers/<%= answer._id %>/solution" method="POST" class="mt-3">
                      <button type="submit" class="btn btn-outline-success btn-sm">
                        Mark as Solution
                      </button>
                    </form>
                  <% } %>
                </div>
              <% }); %>
            <% } else { %>
              <div class="alert alert-info">
                No answers yet. Be the first to help!
              </div>
            <% } %>

            <!-- Answer Form -->
            <% if (post.author._id.toString() !== user._id.toString()) { %>
              <div class="mt-4">
                <h4>Your Answer</h4>
                <form action="/community/<%= post._id %>/answers" method="POST">
                  <div class="mb-3">
                    <textarea class="form-control" name="content" rows="4" required
                              placeholder="Write your answer here..."></textarea>
                  </div>
                  <button type="submit" class="btn btn-primary">Post Answer</button>
                </form>
              </div>
            <% } else { %>
              <div class="alert alert-info mt-4">
                You cannot answer your own question.
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>

<style>
.community-card {
  background-color: var(--bs-card-bg);
  border: 1px solid var(--bs-border-color);
  border-radius: 1rem;
  transition: all 0.3s ease;
  color: var(--bs-body-color);
}

.community-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

.community-card .card-body {
  padding: 2rem;
}

.community-card h3 {
  color: var(--bs-primary);
  margin-bottom: 1rem;
}

.community-card p {
  color: var(--bs-body-color);
  opacity: 0.9;
}

.answer-item {
  background-color: var(--bs-card-bg);
  border: 1px solid var(--bs-border-color);
  border-radius: 0.5rem;
  padding: 1.5rem;
  margin-bottom: 1.5rem;
  color: var(--bs-body-color);
}

.answer-item.border-success {
  border: 2px solid var(--bs-success);
}

.answer-item p {
  color: var(--bs-body-color);
  opacity: 0.9;
}

.answer-item .text-muted {
  color: var(--bs-secondary) !important;
  opacity: 0.8;
}
</style>