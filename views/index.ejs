<%- include('partials/header') %>

<!-- Hero Section -->
<section class="hero">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 text-center">
        <h1 class="display-3">Welcome to <span class="text-gradient">MindfulConnect</span></h1>
        <p class="subtitle mb-4">Your journey to mental wellness starts here</p>
      </div>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="features py-6">
  <div class="container">
    <div class="section-heading mb-6 text-center">
      <h2>Our Services</h2>
      <p class="section-subtitle">Comprehensive mental health support at your fingertips</p>
    </div>
    <div class="row g-4">
      <!-- Feature 1 -->
      <div class="col-md-6 col-lg-4">
        <div class="feature-card fade-in h-100">
          <div class="card-body p-4 text-center">
            <div class="icon-wrapper mb-4 d-flex justify-content-center">
              <i class="fas fa-robot fa-2x text-gradient" aria-hidden="true"></i>
            </div>
            <h3 class="feature-title">AI Chat Support</h3>
            <p class="feature-text">Get immediate support and guidance through our AI-powered chat system, available 24/7.</p>
          </div>
        </div>
      </div>

      <!-- Feature 2 -->
      <div class="col-md-6 col-lg-4">
        <div class="feature-card fade-in h-100" style="animation-delay: 0.2s;">
          <div class="card-body p-4 text-center">
            <div class="icon-wrapper mb-4 d-flex justify-content-center">
              <i class="fas fa-user-md fa-2x text-gradient" aria-hidden="true"></i>
            </div>
            <h3 class="feature-title">Professional Support</h3>
            <p class="feature-text">Connect with qualified mental health professionals for personalized guidance and support.</p>
          </div>
        </div>
      </div>

      <!-- Feature 3 -->
      <div class="col-md-6 col-lg-4">
        <div class="feature-card fade-in h-100" style="animation-delay: 0.4s;">
          <div class="card-body p-4 text-center">
            <div class="icon-wrapper mb-4 d-flex justify-content-center">
              <i class="fas fa-users fa-2x text-gradient" aria-hidden="true"></i>
            </div>
            <h3 class="feature-title">Community Support</h3>
            <p class="feature-text">Join a supportive community of individuals on similar mental health journeys.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Demo Section -->
<section class="demo py-5 bg-dark-2">
  <div class="container text-center">
    <h2 class="mb-4">Experience Compassionate AI</h2>
    <p class="demo-subtitle mb-4">Start a conversation with our supportive AI companion</p>
    
    <!-- Lottie Animation Container -->
    <div class="d-flex justify-content-center mb-4">
      <div style="width: 300px; height: 300px; border-radius: 1rem; overflow: hidden; background: var(--card-bg); border: 1px solid var(--border-color);">
        <dotlottie-player 
          src="https://lottie.host/491da541-84e2-4b57-bdde-0c91b7ed981e/eTdZo5Ywkr.lottie" 
          background="transparent" 
          speed="1" 
          style="width: 100%; height: 100%;" 
          loop 
          autoplay>
        </dotlottie-player>
      </div>
    </div>
    
    <a href="/chat" class="btn btn-primary btn-lg px-4">Start Chatting</a>
  </div>
</section>

<!-- Add the Lottie script at the bottom of your body -->
<script src="https://unpkg.com/@dotlottie/player-component@2.7.12/dist/dotlottie-player.mjs" type="module"></script>

<!-- Call to Action -->
<section class="cta py-6">
  <div class="container text-center">
    <h2 class="mb-4">Ready to Start Your Journey?</h2>
    <p class="cta-subtitle mb-4">Join our community and take the first step towards better mental health.</p>
    <div class="d-flex justify-content-center flex-wrap gap-3">
      <a href="/auth/register" class="btn btn-primary btn-lg px-4">Sign Up Now</a>
    </div>
  </div>
</section>

<%- include('partials/footer') %>