<%- include('partials/header-logged-in') %>

<!-- Community Hero Section -->
<section class="community-hero py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h1 class="display-4 mb-4">Community Support</h1>
                <p class="subtitle mb-4">
                    Ask questions and get support from our community
                </p>
                <button id="askQuestionBtn" class="btn btn-primary btn-lg px-4">
                    <i class="fas fa-plus me-2"></i>Ask a Question
                </button>
            </div>
        </div>
    </div>
</section>

<!-- Main Community Content -->
<div class="community-container py-5">
    <div class="container">
        <div class="row">
            <!-- Questions Column -->
            <div class="col-lg-8">
                <!-- Ask Question Form (Initially hidden) -->
                <div
                    id="askQuestionForm"
                    class="card mb-4"
                    style="display: none;"
                >
                    <div class="card-body">
                        <h3 class="card-title mb-4">Ask a Question</h3>
                        <form id="questionForm">
                            <div class="mb-3">
                                <label for="questionTitle" class="form-label"
                                    >Title</label
                                >
                                <input
                                    type="text"
                                    class="form-control"
                                    id="questionTitle"
                                    required
                                />
                            </div>
                            <div class="mb-3">
                                <label for="questionContent" class="form-label"
                                    >Details</label
                                >
                                <textarea
                                    class="form-control"
                                    id="questionContent"
                                    rows="5"
                                    required
                                ></textarea>
                            </div>
                            <div class="mb-3">
                                <label class="form-label"
                                    >Tags (Optional)</label
                                >
                                <select
                                    id="questionTags"
                                    class="form-select"
                                    multiple
                                >
                                    <option value="anxiety">Anxiety</option>
                                    <option value="depression">
                                        Depression
                                    </option>
                                    <option value="stress">Stress</option>
                                    <option value="relationships">
                                        Relationships
                                    </option>
                                    <option value="self-care">Self-Care</option>
                                    <option value="therapy">Therapy</option>
                                    <option value="mindfulness">
                                        Mindfulness
                                    </option>
                                    <option value="other">Other</option>
                                </select>
                            </div>
                            <div class="d-flex justify-content-end gap-2">
                                <button
                                    type="button"
                                    id="cancelQuestion"
                                    class="btn btn-outline"
                                >
                                    Cancel
                                </button>
                                <button type="submit" class="btn btn-primary">
                                    Post Question
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Questions List -->
                <% if (posts && posts.length > 0) { %> <% posts.forEach(post =>
                { %>
                <div class="card mb-3 question-card">
                    <div class="card-body">
                        <div
                            class="d-flex justify-content-between align-items-start mb-2"
                        >
                            <h5 class="card-title mb-0">
                                <a
                                    href="/community/<%= post._id %>"
                                    class="text-decoration-none"
                                    ><%= post.title %></a
                                >
                            </h5>
                            <% if (post.tags && post.tags.length > 0) { %>
                            <div class="tags">
                                <% post.tags.forEach(tag => { %>
                                <span class="badge bg-light text-dark"
                                    ><%= tag %></span
                                >
                                <% }); %>
                            </div>
                            <% } %>
                        </div>
                        <p class="card-text text-muted mb-3">
                            <%= post.content.substring(0, 150) %><%=
                            post.content.length > 150 ? '...' : '' %>
                        </p>
                        <div
                            class="d-flex justify-content-between align-items-center"
                        >
                            <small class="text-muted">
                                Posted by <%= post.isAnonymous ? 'Anonymous' :
                                post.author.name %>
                            </small>
                            <small class="text-muted">
                                <%= post.answers ? post.answers.length : 0 %>
                                answers
                            </small>
                        </div>
                    </div>
                </div>
                <% }); %> <% } else { %>
                <div class="text-center py-5">
                    <i class="fas fa-question-circle fa-3x mb-3 text-muted"></i>
                    <h5 class="mb-3">No questions yet</h5>
                    <p class="text-muted">Be the first to ask a question!</p>
                </div>
                <% } %>
            </div>

            <!-- Sidebar Column -->
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="fas fa-info-circle me-2 text-primary"></i
                            >Community Guidelines
                        </h5>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i
                                    class="fas fa-check-circle text-primary me-2"
                                ></i
                                >Be kind and supportive
                            </li>
                            <li class="mb-2">
                                <i
                                    class="fas fa-check-circle text-primary me-2"
                                ></i
                                >Respect privacy
                            </li>
                            <li class="mb-2">
                                <i
                                    class="fas fa-check-circle text-primary me-2"
                                ></i
                                >No medical advice
                            </li>
                            <li>
                                <i
                                    class="fas fa-check-circle text-primary me-2"
                                ></i
                                >Use trigger warnings
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
      // Toggle question form
      const askQuestionBtn = document.getElementById('askQuestionBtn');
      const askQuestionForm = document.getElementById('askQuestionForm');
      const cancelQuestionBtn = document.getElementById('cancelQuestion');

      if (askQuestionBtn && askQuestionForm && cancelQuestionBtn) {
        askQuestionBtn.addEventListener('click', function() {
          askQuestionForm.style.display = 'block';
          window.scrollTo({
            top: askQuestionForm.offsetTop - 20,
            behavior: 'smooth'
          });
        });

        cancelQuestionBtn.addEventListener('click', function() {
          askQuestionForm.style.display = 'none';
        });
      }

      // Handle question form submission
      const questionForm = document.getElementById('questionForm');
      if (questionForm) {
        questionForm.addEventListener('submit', async function(e) {
          e.preventDefault();

          const title = document.getElementById('questionTitle').value.trim();
          const content = document.getElementById('questionContent').value.trim();
          const tagSelect = document.getElementById('questionTags');
          const tags = Array.from(tagSelect.selectedOptions).map(option => option.value);

          try {
            const response = await fetch('/community', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify({ title, content, tags })
            });

            if (response.redirected) {
              window.location.href = response.url;
            } else {
              const result = await response.json();
              if (result.error) {
                alert(result.error);
              } else {
                window.location.reload();
              }
            }
          } catch (error) {
            console.error('Error:', error);
            alert('An error occurred while posting your question');
          }
        });
      }
    });
</script>

<%- include('partials/footer') %>
