<%- include('partials/header-logged-in') %>

<!-- Hero Section -->
<section class="hero">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-10 text-center">
        <h1 class="display-3">Community <span class="text-gradient">Support</span></h1>
        <p class="subtitle mb-4">Connect with others on their mental health journey</p>
      </div>
    </div>
  </div>
</section>

<!-- Community Features -->
<section class="features py-6">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <!-- Discussion Forums -->
        <div class="community-card mb-4">
          <div class="card-body">
            <h3><i class="fas fa-comments me-2"></i>Discussion Forums</h3>
            <p>Join conversations about mental health, share experiences, and support others</p>
            <div class="forum-topics">
              <% if (posts && posts.length > 0) { %>
                <% posts.forEach(post => { %>
                  <div class="topic-item">
                    <h4><a href="/community/<%= post._id %>" class="text-decoration-none text-primary"><%= post.title %></a></h4>
                    <div class="d-flex align-items-center mb-2">
                      <small class="text-muted">Posted by <%= post.author.name %> • <%= new Date(post.createdAt).toLocaleDateString() %></small>
                    </div>
                    <p class="mb-2"><%= post.content.substring(0, 150) %>...</p>
                    <div class="d-flex gap-2">
                      <% post.tags.forEach(tag => { %>
                        <span class="badge bg-primary"><%= tag %></span>
                      <% }); %>
                    </div>
                    <div class="mt-2">
                      <small class="text-muted">
                        <i class="fas fa-comments me-1"></i>
                        <%= post.answers ? post.answers.length : 0 %> answers
                      </small>
                    </div>
                  </div>
                <% }); %>
              <% } else { %>
                <div class="alert alert-info">
                  No questions yet. Be the first to ask!
                </div>
              <% } %>
            </div>
            <button class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#newDiscussionModal">
              <i class="fas fa-plus me-2"></i>Start Discussion
            </button>
          </div>
        </div>

        <!-- Success Stories -->
        <div class="community-card">
          <div class="card-body">
            <h3><i class="fas fa-star me-2"></i>Success Stories</h3>
            <p>Read and share inspiring stories of recovery and growth</p>
            <div class="story-list">
              <% if (successStories && successStories.length > 0) { %>
                <% successStories.forEach(story => { %>
                  <div class="story-item">
                    <h4><%= story.title %></h4>
                    <p class="text-muted">By <%= story.author.name %> • <%= new Date(story.createdAt).toLocaleDateString() %></p>
                    <p><%= story.content.substring(0, 150) %>...</p>
                  </div>
                <% }); %>
              <% } else { %>
                <div class="story-item">
                  <h4>No success stories yet</h4>
                  <p>Share your journey to inspire others!</p>
                </div>
              <% } %>
            </div>
            <button class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#newStoryModal">
              <i class="fas fa-plus me-2"></i>Share Your Story
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<%- include('partials/footer') %>

<style>
.community-card {
  background-color: var(--bs-card-bg);
  border: 1px solid var(--bs-border-color);
  border-radius: 1rem;
  transition: all 0.3s ease;
  color: var(--bs-body-color);
}

.community-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

.community-card .card-body {
  padding: 2rem;
}

.community-card h3 {
  color: var(--bs-primary);
  margin-bottom: 1rem;
}

.community-card p {
  color: var(--bs-body-color);
  opacity: 0.9;
}

.community-card .btn {
  padding: 0.5rem 1.5rem;
  font-weight: 500;
}

.community-card .btn i {
  margin-right: 0.5rem;
}

/* Forum Topics */
.forum-topics {
  margin: 1.5rem 0;
}

.topic-item {
  background-color: var(--bs-card-bg);
  border: 1px solid var(--bs-border-color);
  border-radius: 0.5rem;
  padding: 1rem;
  margin-bottom: 1rem;
  color: var(--bs-body-color);
}

.topic-item h4 {
  color: var(--bs-primary);
  margin-bottom: 0.5rem;
}

.topic-item h4 a {
  color: var(--bs-primary);
  text-decoration: none;
}

.topic-item h4 a:hover {
  color: var(--bs-primary-dark);
}

.topic-item p {
  margin-bottom: 0.5rem;
  color: var(--bs-body-color);
  opacity: 0.9;
}

/* Success Stories */
.story-list {
  margin: 1.5rem 0;
}

.story-item {
  background-color: var(--bs-card-bg);
  border: 1px solid var(--bs-border-color);
  border-radius: 0.5rem;
  padding: 1rem;
  margin-bottom: 1rem;
  color: var(--bs-body-color);
}

.story-item h4 {
  color: var(--bs-primary);
  margin-bottom: 0.5rem;
}

.story-item p {
  margin-bottom: 0.5rem;
  color: var(--bs-body-color);
  opacity: 0.9;
}

.story-item .text-muted {
  color: var(--bs-secondary) !important;
  opacity: 0.8;
}
</style>

<!-- New Discussion Modal -->
<div class="modal fade" id="newDiscussionModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Start a Discussion</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form action="/community" method="POST">
          <input type="hidden" name="type" value="discussion">
          <div class="mb-3">
            <label class="form-label">Title</label>
            <input type="text" class="form-control" name="title" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Content</label>
            <textarea class="form-control" name="content" rows="4" required></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label">Tags (comma-separated)</label>
            <input type="text" class="form-control" name="tags" placeholder="e.g., anxiety, stress, mindfulness">
          </div>
          <button type="submit" class="btn btn-primary">Post Discussion</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- New Story Modal -->
<div class="modal fade" id="newStoryModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Share Your Story</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form action="/community" method="POST">
          <input type="hidden" name="type" value="success_story">
          <div class="mb-3">
            <label class="form-label">Title</label>
            <input type="text" class="form-control" name="title" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Your Story</label>
            <textarea class="form-control" name="content" rows="6" required></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label">Tags (comma-separated)</label>
            <input type="text" class="form-control" name="tags" placeholder="e.g., recovery, growth, inspiration">
          </div>
          <button type="submit" class="btn btn-primary">Share Story</button>
        </form>
      </div>
    </div>
  </div>
</div>
